<h1>orders</h1>

<div class="row">
	<% @orders.each do |order| %>
		<div class="container-fluid col-sm-6 col-md-4">
			
			<div class="order-item">
				<h4>
				order # <%= order.id %>:
				<%= link_to order.product.name, order %>
				</h4>
				<p><%= order.product.description %></p>
				<strong><%= number_to_currency(order.product.price.to_f, unit: "â‚¬") %></strong>
				<p>ordered by: <%= order.user.first_name %></p>
				<h3><%= link_to 'show', order %></h3>
			</div>
			
		</div>
	<% end %>
</div>