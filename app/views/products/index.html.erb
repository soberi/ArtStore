<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4 product-item">
        <a href="#"><h3><%= product.name %></h3></a>
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <p><%= product.description %> | <%= product.medium %> | <%= product.price %>â‚¬</p>
        <p><%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
</div>

